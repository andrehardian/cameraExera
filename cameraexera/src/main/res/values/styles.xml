<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="button_green_circle_ml">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_circle_primary</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>
    <style name="button_green_rounded">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_white_rounded</item>
        <item name="android:textSize">@dimen/text_sm</item>
    </style>
    <style name="button_x">
        <item name="android:layout_marginTop">@dimen/margin_bttop</item>
        <item name="android:layout_marginLeft">@dimen/margin_bttop</item>
        <item name="android:layout_marginRight">@dimen/margin_bttop</item>
        <item name="android:layout_width">@dimen/x_size</item>
        <item name="android:layout_height">@dimen/x_size</item>
    </style>
    <style name="button_bottom">
        <item name="android:layout_marginTop">@dimen/margin_bta</item>
        <item name="android:layout_marginBottom">@dimen/margin_bta</item>
        <item name="android:layout_marginLeft">@dimen/margin_rlbt</item>
        <item name="android:layout_marginRight">@dimen/margin_rlbt</item>
    </style>

</resources>
